    {
      "type": "header",
      "content": "Scrolling Text"
    },
    {
      "type": "range",
      "id": "animation_speed",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "p/s",
      "label": "Animation Speed (pixels/second)",
      "default": 100
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
