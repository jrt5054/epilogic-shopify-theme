{%- style -%}

.divider-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 2rem 0;
}

.divider-text h3 {
  margin: 0 2rem;
  text-transform: uppercase;
  font-family: 'Merchant-Regular', serif;
}

.divider-wrapper svg {
  transform: rotate(90deg);
}

.divider-wrapper,
.divider-wrapper h3  {
  background-color: rgb(var(--color-epi-black));
  color: rgb(var(--color-epi-white));
}

@media screen and (min-width: 990px) {
  .divider-text h3 {
    font-size: 2rem;
  }
}

@media screen and (min-width: 989px) {
  .divider-text h3 {
    font-size: 1.6rem;
  }
}


{%- endstyle -%}
<div class="divider-wrapper">
  {%- render 'icon-arrow' -%}
  <div class="divider-text">
    <h3>{{ section.settings.divider_text }}</h3>
  </div>
  {%- render 'icon-arrow' -%}
</div>

{% schema %}
{
  "name": "Section Divider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "divider_text",
      "label": "Divider Text",
      "default": "Divider"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Section Divider"
    }
  ]
}
{% endschema %}
